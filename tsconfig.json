{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es2015"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ],
     "exclude": [
         "node_modules/*"
     ]
}